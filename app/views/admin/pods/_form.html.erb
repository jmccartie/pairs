<%= simple_form_for [:admin, @pod] do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
	<%= f.input :title %>
	<%= f.input :desc %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, :class=>"btn btn-primary" %>
		<%= link_to 'Cancel', admin_pods_path, :class=>"btn"  %>
  </div>
<% end %>