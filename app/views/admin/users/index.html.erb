<div id="main">		
	<div class="page-header">
		<h1>Users</h1>
	</div><!-- page-header -->
	<table id="users_table" class="table table-stripped">
	  <thead>
		  <tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Username</th>
				<th>Email</th>
				<th>Role</th>
		  </tr>
	  </thead>
	  <tbody>
			<% @users.each do |u| %>
		  <tr>
		  	<td><%= u.contact ? u.contact.first_name : "" %></td>
				<td><%= u.contact ? u.contact.last_name : "" %></td>
				<td><%= u.username %></td>
				<td><%= u.contact ? u.contact.email : "" %></td>
				<td>
					<%= simple_form_for [:admin, u], :remote => "true" do |f| %>
						<%= f.input :role, collection: User.roles, label: false, :class => "user_role" %>
					<% end %>
				</td>
		  </tr>
			<% end %>
	  </tbody>
	</table>
</div><!-- main -->
